---
import type { CollectionEntry } from 'astro:content'
import ChevronRight from '../icons/ChevronRight.astro'

interface Props {
  project: CollectionEntry<'projects'>
  i: number
}

const {
  project: { data },
} = Astro.props
---

<article class='flex flex-col gap-8'>
  <div class='w-full'>
    <img src={`/projects/${data.image}`} alt={data.title} class='w-full rounded-lg' />
  </div>
  <div class='flex flex-col gap-7 lg:justify-end'>
    <div class='flex flex-col gap-4'>
      <h3 class='text-2xl font-bold tracking-widest'>{data.title}</h3>
      <p class='text-base font-medium text-neutral-2'>{data.description}</p>
    </div>
    <a
      href={data.preview}
      target='_blank'
      class='text-neutral-1 text-button font-normal p-4 rounded-xl border-[1.5px] border-neutral-2 w-fit flex items-center gap-3 hover:bg-neutral-1 hover:text-bg hover:border-neutral-1 transition-all'
    >
      View Project
      <ChevronRight className='text-neutral-1' />
    </a>
  </div>
</article>

<style>
  a:hover svg {
    color: black;
  }
</style>

---
import type { CollectionEntry } from 'astro:content'
import ChevronRight from '../icons/ChevronRight.astro'
import { Image } from 'astro:assets'

interface Props {
  project: CollectionEntry<'projects'>
  i: number
}

const {
  project: { data },
} = Astro.props
---

<article class='flex flex-col gap-8'>
  <a href={data.preview} target='_blank' class='flex flex-col gap-4'>
    <div class='w-full'>
      <Image
        src={`/projects/${data.image}`}
        alt={data.title}
        class='w-full rounded-lg'
        width={500}
        height={500}
      />
    </div>
    <div class='flex flex-col gap-7 lg:justify-end'>
      <div class='flex flex-col gap-2'>
        <h3 class='text-2xl font-bold tracking-widest'>{data.title.toUpperCase()}</h3>
        <p class='text-base lg:!text-xl font-normal text-neutral-2 leading-7'>
          {data.description}
        </p>
      </div>
    </div>
  </a>
</article>

<style>
  a:hover svg {
    color: black;
  }
</style>

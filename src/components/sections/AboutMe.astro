        <VisualStudioCode />
        <Figma />
        <Postman />
        <Github />
        <Vercel />
        <Railway />
      </div>
    </div>
  </div>
  <div>
    <div class='flex flex-col gap-4 mt-10'>
      <h3 class='font-semibold text-2xl tracking-[0.96px]'>Experience</h3>
      <div class='flex flex-col'>
        <div class='flex gap-2'>
          <div class='flex flex-col items-center mt-1'>
            <div class='w-4 h-[18px] rounded-full border-2 border-neutral-1'></div>
            <div class='w-[1px] h-full bg-neutral-2'></div>
          </div>
          <div class='flex flex-col gap-3 mb-16'>
            <div class='flex gap-2'>
              <h4 class='font-semibold'>Full stack developer</h4>
              <span class='text-neutral-1'>•</span>
              <h4 class='font-semibold'>DrEnvío</h4>

---
import { Image } from "astro:assets";
import { Link } from "lucide-astro";
import Icon from "./icon.astro";

interface Props {
  techs: string[];
  image: ImageMetadata;
  livePreview: string;
  github: string;
  transitionName: string;
}

const { image, techs, livePreview, github, transitionName } = Astro.props;
---

<section class="">
  <div class="flex flex-col gap-16 mt-16 mx-4 md:mx-8 2xl:mx-24">
    <div class="flex flex-col slide-in-bottom">
      <h1
        class="text-5xl font-medium text-center text-black md:text-8xl md:font-semibold"
      >
        WEB SQL
      </h1>
      <p class="text-lg font-light text-center md:text-2xl md:font-normal">
        Web based SQL client
      </p>
    </div>
    <div
      class="opacity-0 flex items-center justify-between gap-3 slide-in-bottom"
      style="animation-delay: .3s;"
    >
      <div class="flex items-center gap-3">
        {techs.map((tech) => <Icon icon={tech} />)}
      </div>
      <div class="flex items-center gap-3">
        <a href={livePreview} target="_blank" rel="noopener noreferrer">
          <Link />
        </a>
        <a href={github} target="_blank" rel="noopener noreferrer">
          <Icon icon="github" />
        </a>
      </div>
    </div>
  </div>
  <div
    class="mt-5 bg-white flex justify-center items-center h-[calc(100vh-236px-20px-var(--header-height))] md:h-auto"
    transition:name={transitionName}
  >
    <Image src={image} alt="Web SQL" class="h-full object-cover md:h-auto" />
  </div>
</section>

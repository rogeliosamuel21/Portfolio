---
import Github from '../icons/techs/Github.astro'
import Linkedin from '../icons/techs/Linkedin.astro'
import Email from '../icons/techs/email.astro'
import { Animation } from '../react/Animation'
---

<section class='flex flex-col gap-8' id='get-in-touch'>
  <div class='flex flex-col gap-3'>
    <Animation client:load>
      <h2 class='text-h4 tracking-h4 text-center normal-case lg:text-h2'>
        Get in <strong>Touch<span class='text-primary'>.</span></strong>
      </h2>
    </Animation>
    <Animation client:load y={[75, 0]}>
      <p class='text-body-1 text-center normal-case'>Some places where you can reach me</p>
    </Animation>
  </div>
  <Animation client:load y={[75, 0]}>
    <div class='flex justify-center gap-10'>
      <a
        href='https://www.linkedin.com/in/rogelio-samuel-moreno-corrales/'
        target='_blank'
        aria-label='Go to linkedin profile'
      >
        <Linkedin />
      </a>
      <a href='https://github.com/sam-621' target='_blank' aria-label='Go to github profile'>
        <Github />
      </a>
      <a
        href='mailto:samuel.corrales621@gmail.com'
        target='_blank'
        aria-label='mail to samuel.corrales@gmail.com'
      >
        <Email />
      </a>
    </div>
  </Animation>
</section>
